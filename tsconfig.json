{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "newLine": "lf",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "lib",
        "preserveConstEnums": true,
        "pretty": true,
        "removeComments": false,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "downlevelIteration": true,
        "incremental": true,
        "importHelpers": true,
        "sourceMap": true,
        "strict": true,
        "stripInternal": true,
        "target": "esnext",
        "types": [
            "@types/node",
            "@types/mocha",
            "@types/chai"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "docs/**/*",
        "node_modules",
        "tests"
    ]
}
